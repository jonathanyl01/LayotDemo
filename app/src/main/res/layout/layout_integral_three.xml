<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/re_onlinepay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
           android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_onlinepay"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_onlinepay"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="在线充值" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_payrecord"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_record"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_record"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="充值记录" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_integralmarket"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_integralmarket"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_integralmarket"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="积分商城" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/re_integralrecord"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_integralrecord"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_integralrecord"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="积分记录" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_integralrule"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_integralrule"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_integralrule"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="积分规则" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_integralgrade"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_integralgrade"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_integralgrade"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="积分等级" />

        </RelativeLayout>
    </LinearLayout>




</LinearLayout>