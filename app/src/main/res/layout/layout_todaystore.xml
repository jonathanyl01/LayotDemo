<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_todaystore"
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="今日好店" />

        <ImageView
            android:id="@+id/todaystore_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_arrow_right" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/todaystore_right"
            android:layout_marginRight="5dp"
            android:text="更多" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"/>

    <RelativeLayout
        android:id="@+id/re_store"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_storetitle"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/store_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_storetitle"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/iv_storetitle"
            android:layout_toRightOf="@+id/iv_storetitle"
            android:text="李克快餐" />
        <TextView
            android:id="@+id/store_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月售0份"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/store_title"
            android:layout_alignStart="@+id/store_title" />
        <TextView
            android:id="@+id/store_pieces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起送 ¥ 0.00 配送 ¥ 0.00"
            android:layout_alignBottom="@+id/iv_storetitle"
            android:layout_alignLeft="@+id/store_sales"
            android:layout_alignStart="@+id/store_sales" />
        <TextView
            android:id="@+id/store_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30分钟"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/store_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234m"
            android:layout_alignBottom="@+id/iv_storetitle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>

</LinearLayout>