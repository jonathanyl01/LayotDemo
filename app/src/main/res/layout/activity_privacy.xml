<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kaite.lianzhong.zhsq.mine.acyivity.PrivacyActivity">
    <android.support.v7.widget.Toolbar

        android:id="@+id/privacy_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私"
            android:layout_gravity = "center"
            android:textSize="20sp"/>

    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_light"
        android:text="通讯录"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加我好友时需要验证"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <com.kaite.lianzhong.zhsq.mine.view.SwitchButton
            android:id="@+id/check_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_light"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_dynamc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="允许好友查看我的动态"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <com.kaite.lianzhong.zhsq.mine.view.SwitchButton
            android:id="@+id/dynamc_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="允许好友查看我的帖子"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <com.kaite.lianzhong.zhsq.mine.view.SwitchButton
            android:id="@+id/invitation_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_light"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通过手机号搜索到我"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <com.kaite.lianzhong.zhsq.mine.view.SwitchButton
            android:id="@+id/search_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="向我推荐通讯录好友"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <com.kaite.lianzhong.zhsq.mine.view.SwitchButton
            android:id="@+id/recommend_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_light"
        android:text="开启后，为您推荐已开通微信的手机联系人"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_id_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通过乐福智家账号搜索到我"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <com.kaite.lianzhong.zhsq.mine.view.SwitchButton
            android:id="@+id/id_friend_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/gray_light"
        android:text="关闭后，其他用户将不能通过微信搜索到您"
        android:paddingTop="10dp"
        android:textSize="15sp"
        android:paddingLeft="10dp" />

</LinearLayout>
